pipeline {
    
	agent any
	
	tools {
        jdk 'java21'
        maven 'maven'
    }
    
    environment {
        GITHUB_TOKEN = credentials('github-token')
    }
    
    parameters {
	    booleanParam(
	        name: 'RUN_UI_TESTS',
	        defaultValue: true,
	        description: 'Run Selenium UI tests'
	    )
	}
	
	stages{
		
		stage('Checkout') {
			
			steps {
				checkout scm
			}
			
		}
		
		stage('Build and Test') {
			steps {
				dir('cicd/CICD') {
					sh 'mvn clean test package'
				}
				
			}
		}
		
		stage('UI Tests (Selenium)') {
    		when {
        		expression { return params.RUN_UI_TESTS }
    		}	
    		steps {
				dir('cicd/CICD') {
        			sh 'mvn -B verify -DskipUnitTests=true'
        		}
    		}
		}
		
        stage('Secure Step') {
            steps {
                sh 'echo "Token length is ${#GITHUB_TOKEN}"'
            }
    	}
		
		
	}
	
	post {
	    always {
	        junit allowEmptyResults: true, testResults: '''
	            cicd/CICD/target/surefire-reports/*.xml,
	            cicd/CICD/target/failsafe-reports/*.xml
	        '''
	        
	        archiveArtifacts artifacts: 'cicd/CICD/target/screenshots/**/*.png', allowEmptyArchive: true
	        
	    }
	}
	
}