pipeline {
	
	agent any
	
	tools {
        jdk 'java21'
        maven 'maven'
    }
	
	stages{
		
		stage('Checkout') {
			
			steps {
				checkout scm
			}
			
		}
		
		stage('Build and Test') {
			steps {
				dir('cicd/CICD') {
					sh 'mvn clean test package'
				}
				
			}
		}
		
	}
	
	post {
		always {
			junit 'cicd/CICD/target/surefire-reports/*.xml'
		}
	}
	
}